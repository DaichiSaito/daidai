<div class="container col-md-10 offset-md-1 col-lg-8 offset-lg-2">
  <div class="advance-search">
    <%= render 'shared/search_form', { url: boards_path }  %>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row mt15">
    <% if @boards.present? %>
      <% @boards.each do |board| %>
      <div class="col-sm-12 col-lg-3">
        <%= render 'shared/board', { board: board } %>
      </div>
      <% end %>
    <% else %>
      <p><%= t('.no_contents') %></p>
    <% end %>
  </div>

  <!-- ページネーション -->
  <%= paginate @boards %>
</div>


